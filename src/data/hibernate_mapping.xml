<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="data.entities.JobEntity" table="Job" schema="OCS">
        <id name="id">
            <column name="id" sql-type="int(11)"/>
        </id>
        <property name="name">
            <column name="name" sql-type="varchar(45)" length="45" not-null="true"/>
        </property>
        <property name="description">
            <column name="description" sql-type="varchar(45)" length="45" not-null="true"/>
        </property>
        <property name="salary">
            <column name="salary" sql-type="int(11)" not-null="true"/>
        </property>
    </class>
    <class name="data.entities.JobFeatureEntity" table="JobFeature" schema="OCS">
        <id name="id">
            <column name="id" sql-type="int(11)"/>
        </id>
        <property name="name">
            <column name="name" sql-type="varchar(45)" length="45" not-null="true"/>
        </property>
        <property name="description">
            <column name="description" sql-type="varchar(140)" length="140" not-null="true"/>
        </property>
    </class>
    <class name="data.entities.JobRequestedFeaturesEntity" table="JobRequestedFeatures" schema="OCS">
        <id name="id">
            <column name="id" sql-type="int(11)"/>
        </id>
    </class>
    <class name="data.entities.UserEntity" table="User" schema="OCS">
        <id name="id">
            <column name="id" sql-type="int(11)"/>
        </id>
        <property name="email">
            <column name="email" sql-type="varchar(45)" length="45" not-null="true"/>
        </property>
        <property name="password">
            <column name="password" sql-type="varchar(45)" length="45" not-null="true"/>
        </property>
        <property name="phoneNumber">
            <column name="phoneNumber" sql-type="varchar(15)" length="15" not-null="true"/>
        </property>
        <property name="address">
            <column name="address" sql-type="varchar(45)" length="45" not-null="true"/>
        </property>
        <property name="firstName">
            <column name="firstName" sql-type="varchar(45)" length="45" not-null="true"/>
        </property>
        <property name="lastName">
            <column name="lastName" sql-type="varchar(45)" length="45" not-null="true"/>
        </property>
        <property name="personalId">
            <column name="personalID" sql-type="varchar(45)" length="45"/>
        </property>
        <property name="role">
            <column name="role" sql-type="int(11)" not-null="true"/>
        </property>
    </class>
    <class name="data.entities.UserJobFeaturesEntity" table="UserJobFeatures" schema="OCS">
        <id name="id">
            <column name="id" sql-type="int(11)"/>
        </id>
    </class>
    <class name="data.entities.UsersJobsEntity" table="UsersJobs" schema="OCS">
        <id name="id">
            <column name="id" sql-type="int(11)"/>
        </id>
        <property name="startTime">
            <column name="startTime" sql-type="date" not-null="true"/>
        </property>
        <property name="endTime">
            <column name="endTime" sql-type="date" not-null="true"/>
        </property>
    </class>
</hibernate-mapping>