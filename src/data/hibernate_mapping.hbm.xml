<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="data.entities.Job" table="Job" schema="OCS">
        <id name="id">
            <column name="id" sql-type="int(11)"/>
            <generator class="native" >
                <param name="sequence">id_sequence</param>
            </generator>
        </id>
        <property name="name">
            <column name="name" sql-type="varchar(45)" length="45" not-null="true"/>
        </property>
        <property name="description">
            <column name="description" sql-type="varchar(45)" length="45" not-null="true"/>
        </property>
        <property name="salary">
            <column name="salary" sql-type="int(11)" not-null="true"/>
        </property>
        
        <many-to-one name="jobArea" column="jobArea" 
                     class="data.entities.JobArea" not-null="true"/>

        <list name="jobFeatures" cascade="all">
            <key column="jobId"/>
            <list-index column="idx"/>
            <many-to-many class="data.entities.JobFeature"/>
        </list>

    </class>
    <class name="data.entities.JobFeature" table="JobFeature" schema="OCS">
        <id name="id">
            <column name="id" sql-type="int(11)"/>
            <generator class="native" >
                <param name="sequence">id_sequence</param>
            </generator>
        </id>
        <property name="name">
            <column name="name" sql-type="varchar(45)" length="45" not-null="true"/>
        </property>
        <property name="description">
            <column name="description" sql-type="varchar(140)" length="140" not-null="true"/>
        </property>
    </class>
    <class name="data.entities.User" table="User" schema="OCS">
        <id name="id">
            <column name="id" sql-type="int(11)"/>
            <generator class="native" >
                <param name="sequence">id_sequence</param>
            </generator>
        </id>
        <property name="email">
            <column name="email" sql-type="varchar(45)" length="45" not-null="true"/>
        </property>
        <property name="password">
            <column name="password" sql-type="varchar(45)" length="45" not-null="true"/>
        </property>
        <property name="phoneNumber">
            <column name="phoneNumber" sql-type="varchar(15)" length="15" not-null="true"/>
        </property>
        <property name="address">
            <column name="address" sql-type="varchar(45)" length="45" not-null="true"/>
        </property>
        <property name="firstName">
            <column name="firstName" sql-type="varchar(45)" length="45" not-null="true"/>
        </property>
        <property name="lastName">
            <column name="lastName" sql-type="varchar(45)" length="45" not-null="true"/>
        </property>
        <property name="personalId">
            <column name="personalID" sql-type="varchar(45)" length="45"/>
        </property>
        <property name="role" column="role" not-null="true">
            <type name="org.hibernate.type.EnumType">
                <param name="enumClass">data.entities.User$Role</param>
            </type>
        </property>
        <property name="gender" column="gender" not-null="true">
            <type name="org.hibernate.type.EnumType">
                <param name="enumClass">data.entities.User$Gender</param>
            </type>
        </property>
        <property name="birthday">
            <column name="birthday" sql-type="date" not-null="true"/>
        </property>

        <list name="jobFeatures" cascade="all">
            <key column="userId"/>
            <list-index column="idx"/>
            <one-to-many class="data.entities.JobFeature"/>
        </list>

    </class>
    <class name="data.entities.UsersJobs" table="UsersJobs" schema="OCS">
        <id name="id">
            <column name="id" sql-type="int(11)"/>
            <generator class="native" >
                <param name="sequence">id_sequence</param>
            </generator>
        </id>
        <property name="userId">
            <column name="userId" sql-type="int(11)" not-null="true"/>
        </property>
        <property name="jobId">
            <column name="jobId" sql-type="int(11)" not-null="true"/>
        </property>
        <property name="startTime">
            <column name="startTime" sql-type="date" not-null="true"/>
        </property>
        <property name="endTime">
            <column name="endTime" sql-type="date" not-null="true"/>
        </property>
    </class>
    <class name="data.entities.JobArea" table="JobArea" schema="OCS">
        <id name="id">
            <column name="id" sql-type="int(11)"/>
            <generator class="native" >
                <param name="sequence">id_sequence</param>
            </generator>
        </id>
       <property name="name">
            <column name="name" sql-type="varchar(45)" length="45" not-null="true"/>
       </property>
    </class>
</hibernate-mapping>